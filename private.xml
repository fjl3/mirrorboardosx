    <item>
        <name>MirrorBoardOSX</name>
        <appendix>XKCD's Mirrorboard merged with Mirror-QWERTY (for OS X)</appendix>
        <identifier>private.mirrorboardosx</identifier>
        
        <!-- major difference: xkb has caps as a modifier key. I think that the space bar is much easier, more practical, and more common. -->

        <autogen>--KeyToKey--
            KeyCode::BACKQUOTE, ModifierFlag::SPACE,
            KeyCode::DELETE
        </autogen>

        <!-- difference: xkb has space as the return key. Use TAB instead -->
        <autogen>--KeyToKey--
            KeyCode::TAB, ModifierFlag::SPACE,
            KeyCode::RETURN
        </autogen>
        
        <!-- difference: Double modifiers for extra keys.
         Order matters! The double modifier autogen's should come first or
         else they get overridden. -->        
        
        <!-- difference: use the double modifier to map
         'qwe' to '[]\'
         'a' to ';' -->
        <autogen>--KeyToKey--
            KeyCode::Q, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::BRACKET_LEFT
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::W, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::BRACKET_RIGHT
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::E, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::BACKSLASH
        </autogen>

        <!--
         I map some double modifier letters to work similar to VIM movement
         keys. I found 'j' and 'k' came naturally mirrored but movement left and
         right made more sense mapped to 's' and 'g'.
         -->
        <autogen>--KeyToKey--
            KeyCode::S, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::CURSOR_LEFT
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::D, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::CURSOR_UP
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::F, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::CURSOR_DOWN
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::G, ModifierFlag::SPACE | ModifierFlag::COMMAND_L,
            KeyCode::CURSOR_RIGHT
        </autogen>


        <autogen>--KeyToKey--
            KeyCode::KEY_1, ModifierFlag::SPACE,
            KeyCode::EQUAL
        </autogen>

        <autogen>--KeyToKey--
            KeyCode::KEY_2, ModifierFlag::SPACE,
            KeyCode::MINUS
        </autogen>

        <autogen>--KeyToKey--
            KeyCode::KEY_3, ModifierFlag::SPACE,
            KeyCode::KEY_0
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::KEY_4, ModifierFlag::SPACE,
            KeyCode::KEY_9
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::KEY_5, ModifierFlag::SPACE,
            KeyCode::KEY_8
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::KEY_6, ModifierFlag::SPACE,
            KeyCode::KEY_7
        </autogen>
        
        <autogen>--KeyToKey--
            KeyCode::Q, ModifierFlag::SPACE,
            KeyCode::P
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::W, ModifierFlag::SPACE,
            KeyCode::O
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::E, ModifierFlag::SPACE,
            KeyCode::I
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::R, ModifierFlag::SPACE,
            KeyCode::U
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::T, ModifierFlag::SPACE,
            KeyCode::Y
        </autogen>


        <autogen>--KeyToKey--
            KeyCode::CAPSLOCK, ModifierFlag::SPACE,
            KeyCode::QUOTE
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::A, ModifierFlag::SPACE,
            KeyCode::SEMICOLON
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::S, ModifierFlag::SPACE,
            KeyCode::L
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::D, ModifierFlag::SPACE,
            KeyCode::K
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::F, ModifierFlag::SPACE,
            KeyCode::J
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::G, ModifierFlag::SPACE,
            KeyCode::H
        </autogen>

        <autogen>--KeyToKey--
            KeyCode::Z, ModifierFlag::SPACE,
            KeyCode::SLASH
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::X, ModifierFlag::SPACE,
            KeyCode::DOT
        </autogen>
        <autogen>--KeyToKey--
            KeyCode::C, ModifierFlag::SPACE,
