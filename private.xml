    </autogen>
 
    <!-- For this fork: zxcvb is mapped to .,mnb instead of /.,mn -->
    <autogen>--KeyToKey--
      KeyCode::Z, ModifierFlag::CAPSLOCK,
      KeyCode::DOT
    </autogen>
    <autogen>--KeyToKey--
      KeyCode::X, ModifierFlag::CAPSLOCK,
      KeyCode::COMMA
    </autogen>
    <autogen>--KeyToKey--
